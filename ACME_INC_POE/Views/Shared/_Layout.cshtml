<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ACME INC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/StyleSheet.css" rel="stylesheet" type="text/css" />


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <ul id="menu">
            <li>@Html.ActionLink("ACME INC", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>
                <a href="#">Categories</a>
                <ul>
                    <li>@Html.ActionLink("Shoes", "Shoes", "Home")</li>
                    <li>@Html.ActionLink("Tops", "Tops", "Home")</li>
                    <li>@Html.ActionLink("Winter Wear", "Warm_Wear", "Home")</li>
                    <li>@Html.ActionLink("Dresses", "Dresses", "Home")</li>
                </ul>
            </li>
            <li>@Html.ActionLink("Login", "Login", "Home")</li>
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ACME INC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/StyleSheet")
    @RenderSection("scripts", required: false)
</body>
</html>
